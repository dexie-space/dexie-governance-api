name = "governance-api"
main = "src/index.ts"
compatibility_date = "2024-03-20"
compatibility_flags = ["nodejs_compat"]

[placement]
mode = "smart"

[vars]
FULLNODE_RPC = "https://rpc.dexie.space"
NAMESPACE = "" # eg. dexie
TEAM_PUBKEYS = [""] # pubkeys that are allowed to create proposals (eg. dexie Core Team)

[[d1_databases]]
binding = "DB"
database_name = ""
database_id = ""

[env.testnet.vars]
FULLNODE_RPC = "https://rpc-testnet.dexie.space"
NAMESPACE = "" # eg. dexie-testnet
TEAM_PUBKEYS = [""] # pubkeys that are allowed to create proposals (eg. dexie Core Team)

[[env.testnet.d1_databases]]
binding = "DB"
database_name = ""
database_id = ""